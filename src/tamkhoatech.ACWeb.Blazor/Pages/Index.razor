@page "/"
@using Volo.Abp.MultiTenancy
@inherits ACWebComponentBase
@inject AuthenticationStateProvider AuthenticationStateProvider

<div class="container">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-auto col-lg-auto text-center">
                    <img src="images/homebg.jpg" class="img-fluid">
                </div>
                <div class="col-md col-lg d-flex align-items-center">
                    <div class="p-5 text-center">
                        <h5 class="m-1"> <i class="fas fa-rocket"></i> Welcome to <strong>ACWeb</strong> !</h5>
                            <p class="lead px-lg-5 mx-lg-5">@L["LongWelcomeMessage"]</p>
                            @if (!CurrentUser.IsAuthenticated)
                            {
                                <a class="btn btn-primary" href="Account/Login"><i class="fa fa-sign-in"></i> @L["Login"]</a>
                            }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="mb-5 text-center">
        <p class="align-middle">
            <a href="https://tamkhoatech.vn" target="_blank" class="mx-2"><span class="text-secondary">Tam Khoa Technology</span></a>
        </p>
    </div>
</div>