            CheckMessage = false;
            ShowModalMessage = true;
        }
        StateHasChanged();
    }
    public async Task RecordDoubleClickHandler(RecordDoubleClickEventArgs<DuDauKyTkDto> args)
    {
        var item = await _duDauKyTk.GetByIdAsync(args.RowData.Id);
        SelectDuDauKyTk = _objectMapper.Map<DuDauKyTkDto, DuDauKyTkRequest>(item);
        IsShowModalEdit = true;
        StateHasChanged();
    }
    private async Task DeleteAsync()
    {
        var selectedRecords = await SfGrid.GetSelectedRecordsAsync();
        if (selectedRecords.Count > 0)
        {
            CheckDelete = true;
            string names = "";
            foreach (var data in selectedRecords)
                names += data.TaiKhoanUd + ", ";
            names = names.TrimEnd(',', ' ');
            TextMessage = $"Xác nhận xóa <b>{selectedRecords.Count.ToString("00")}</b> tài khoản có mã {(selectedRecords.Count > 1 ? "gồm" : "")}: <span style='color:red'>{names}</span>";
            ShowModalMessage = true;
        }
        else
        {
            TextMessage = "Bạn chưa chọn dòng.";
            ShowModalMessage = true;
            CheckMessage = false;
        }
        StateHasChanged();
    }
    private async Task ConfirmDeleleAsync()
    {
        CheckDelete = false;
        var selectedRecords = await SfGrid.GetSelectedRecordsAsync();
        if (selectedRecords.Count > 0)
        {
            var ids = new List<int?>();
            foreach (var data in selectedRecords)
                ids.Add(data.Id);
            var result = await _duDauKyTk.DeleteListAsync(ids);
            if (result.IsSuccessed)
            {
                IsDeleted = true;
                DuDauKyTkDtos = await _duDauKyTk.GetListAsync(SelectDauKy, IsDeleted);
                await this.SfGrid.Refresh();
            }
            TextMessage = result.Message;
            CheckMessage = result.IsSuccessed;
            ShowModalMessage = true;
        }
    }
    private async Task RefreshAsync()
    {
        await this.SfGrid.SearchAsync(string.Empty);
        DuDauKyTkDtos = await _duDauKyTk.GetListAsync(SelectDauKy, IsDeleted);
        await this.SfGrid.Refresh();
    }
    private async Task ExportToExcelAsync()
    {
        string name = "Danh sách số dư đầu kỳ tài khoản";
        var content = _duDauKyTk.ExportExcel(DuDauKyTkDtos, name);
        var fileName = $"{name}.xlsx";
        var contentType = "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet";
        var base64 = Convert.ToBase64String(content);
        await _jsRuntime.InvokeVoidAsync("downloadFileFromBase64", fileName, contentType, base64);
    }
