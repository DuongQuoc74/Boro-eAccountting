    {
        if (args.Key == "F3")
        {
            await this.EditAsync();
        }
        else if (args.Key == "F9")
        {
            await this.ExportToExcelAsync();
        }
        else if (args.Key == "F8")
        {
            await this.DeleteAsync();
        }   
        else if (args.Key == "F10")
        {
