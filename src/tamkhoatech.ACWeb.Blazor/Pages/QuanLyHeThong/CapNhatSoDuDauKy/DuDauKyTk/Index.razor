    {
        var result = await _duDauKyTk.UpdateAsync(SelectDuDauKyTk.Id, SelectDuDauKyTk);
        if(result.IsSuccessed)
        {
            IsShowModalEdit = false;
            DuDauKyTkDtos = await _duDauKyTk.GetListAsync(SelectDauKy, IsDeleted);
            await this.SfGrid.Refresh();
        }
        TextMessage = result.Message;
        CheckMessage = result.IsSuccessed;
        ShowModalMessage = true;
    }
