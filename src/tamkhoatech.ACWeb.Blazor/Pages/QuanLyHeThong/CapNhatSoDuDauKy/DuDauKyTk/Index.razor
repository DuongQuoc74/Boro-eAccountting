    private async Task EditAsync()
    {
        var selectedRecords = await SfGrid.GetSelectedRecordsAsync();
        if (selectedRecords.Count > 0)
        {
            var item = await _duDauKyTk.GetByIdAsync(selectedRecords.First().Id);
            SelectDuDauKyTk = _objectMapper.Map<DuDauKyTkDto, DuDauKyTkRequest>(item);
            IsShowModalEdit = true;
