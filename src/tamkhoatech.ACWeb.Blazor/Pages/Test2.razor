            if (result.IsSuccessed)
            {
                if (SelectPhieuChi.QuyenSoId != null && SelectPhieuChi.SoPhieu != null)
                {
                    await _quyenSo.UpdateSoCTAsync(SystemConstants.LoaiPhieu.PhieuChi, SelectPhieuChi.QuyenSoId, SelectPhieuChi.SoPhieu);
                }
                ScreenDisable();
            }
            else
            {
                TextMessage = result.Message;
                CheckMessage = false;
                IsDeleteMessage = false;
                IsConfirmMessage = false;
                ShowModalMessage = true;
            }
        }
