            var sumSoLuong = PhanBoChietKhauThuongMaiRequests.Sum(item => item.SoLuong);
            sumSoLuong = sumSoLuong == 0 ? 1 : sumSoLuong;

            var sumGiaTri = PhanBoChietKhauThuongMaiRequests.Sum(item => item.TienHang);
            sumGiaTri = sumGiaTri == 0 ? 1 : sumGiaTri;

            var sumGiaTriVND = PhanBoChietKhauThuongMaiRequests.Sum(item => item.TienHangVND);
            sumGiaTriVND = sumGiaTriVND == 0 ? 1 : sumGiaTriVND;

            var sumTyLeCk = PhanBoChietKhauThuongMaiRequests.Sum(item => item.TyLeCk);
            sumTyLeCk = sumTyLeCk == 0 ? 1 : sumTyLeCk;
            foreach (var item in PhanBoChietKhauThuongMaiRequests)
            {
                switch (SelectPhieuNhap.PhuongPhapChietKhau)
                {
                    case 1:
                        item.ChietKhauVND = SelectPhieuNhap.ChietKhauVND * item.SoLuong / sumSoLuong;
                        if (CheckNgoaiTe)
                            item.ChietKhau = SelectPhieuNhap.ChietKhau * item.SoLuong / sumSoLuong;
                        break;
                    case 2:
                        item.ChietKhauVND = SelectPhieuNhap.ChietKhauVND * item.TienHangVND / sumGiaTriVND;
                        if (CheckNgoaiTe)
                            item.ChietKhau = SelectPhieuNhap.ChietKhau * item.TienHang / sumGiaTri;
                        break;
                    case 4:
                        item.ChietKhauVND = SelectPhieuNhap.ChietKhauVND * item.TyLeCk / sumTyLeCk;
                        if (CheckNgoaiTe)
                            item.ChietKhau = SelectPhieuNhap.ChietKhau * item.TyLeCk / sumTyLeCk;
                        break;
                    default:
                        break;
                }
            }
            this.SfGridPhanBoChietKhauThuongMai.Refresh();
        }
        else if (PhanBoChiPhiRequests.Count > 0 && SelectedTab == 2)
        {
            var sumTien = PhanBoChiPhiRequests.Sum(item => item.TienHang);
            sumTien = sumTien == 0 ? 1 : sumTien;
            var sumTienVND = PhanBoChiPhiRequests.Sum(item => item.TienHangVND);
            sumTienVND = sumTienVND == 0 ? 1 : sumTienVND;
            foreach (var item in PhanBoChiPhiRequests)
